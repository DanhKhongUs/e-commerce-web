{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
